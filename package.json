{
  "name": "bdd-react-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "license": "0BSD",
  "description": "A simple React 19 project demonstrating Behavior-Driven Development (BDD) using Cucumber.js and Playwright. This project is meant to serve as a learning resource showcasing the integration of end-to-end testing with modern web development practices.",
  "keywords": [
    "react",
    "cucumber-js",
    "playwright",
    "bdd",
    "end-to-end-testing",
    "e2e",
    "testing",
    "typescript",
    "javascript",
    "web-development",
    "vite",
    "automation",
    "living-documentation",
    "training"
  ],
  "homepage": ".",
  "repository": "github:code-chimp/bdd-react-app#README",
  "author": {
    "name": "Tim Goshinski",
    "email": "tim@code-chimp.com",
    "url": "https://code-chimp.com"
  },
  "volta": {
    "node": "24.0.1"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "check:lockfile": "node ./scripts/validate-lockfile.cjs",
    "e2e:install": "npx playwright install",
    "test:bdd": "run-s test:bdd:run test:bdd:format",
    "test:bdd:run": "cross-env TS_NODE_PROJECT=tsconfig.cucumber.json cucumber-js -f json:./reports/cucumber_report.json",
    "test:bdd:format": "node ./scripts/cucumber-html-reporter.mjs",
    "test:spec": "ng test",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "run-p lint:*",
    "lint:ts": "eslint ./src/**/**.ts",
    "fix:ts": "eslint ./src/**/**.ts* --fix",
    "lint:styles": "stylelint \"./src/**/*.css\"",
    "fix:styles": "stylelint \"./src/**/*.css\" --fix",
    "prepare": "husky"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.4",
    "clsx": "^2.1.1",
    "postcss": "^8.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind": "^4.0.0",
    "tailwindcss": "^4.1.4",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.2.0",
    "@cucumber/pretty-formatter": "^1.0.1",
    "@eslint/js": "^9.25.0",
    "@playwright/test": "^1.52.0",
    "@types/cucumber": "^6.0.1",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "browserslist": "^4.24.4",
    "cross-env": "^7.0.3",
    "cucumber-html-reporter": "^7.2.0",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "stylelint": "^16.18.0",
    "stylelint-config-recommended": "^16.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.2"
  }
}
